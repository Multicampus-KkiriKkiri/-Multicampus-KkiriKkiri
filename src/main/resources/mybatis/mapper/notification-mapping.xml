<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="dao.NotificationDAO">
 <select id="getNotificationText" resultType="String" parameterType="notificationdto">
  select notificationText from notification where userId=#{userId} and groupId = #{groupId}
 </select>
 
 <insert id="insertNotification" parameterType="notificationdto">
	insert into notification values
	(#{notificationId}, #{userId}, #{groupId}, #{notificationTime}, #{notificationText})
 </insert>

 <delete id="deleteNotification">
	delete from notification where notificationTime &lt; date_sub(Now(), interval 30 day)   
 </delete>

  </mapper>
