<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.ChatDAO">

	<select id="getChats" resultType="chatdto" parameterType="int">
		select * from chat where userId=#{userId}
	</select>
	 
	<insert id="insertChat" parameterType="chatdto">
		insert into chat values
		(#{groupId}, #{userId}, #{chatMessage}, now()) 
		<!-- 
		chat table의 column 순서가 위와 같습니다. 
		{#chatId}는 autoincrement라서 넣지 않았습니다.
		-->
	</insert>
	
</mapper>